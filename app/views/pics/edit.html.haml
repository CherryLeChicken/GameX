#edit_page.col-md-8.col-md-offset-2
	.row
		.panel.panel-default
			.panel-heading
				%h1 Fix GameX
			.panel-body
				.current_image
					%strong.center Right Now
					= image_tag @pic.image.url(:medium)
				- if current_user == @pic.user
					= render 'form'
				- else
					.p You cannot edit someone else's post.
					= link_to "Back", :back, class: "btn btn-info"
